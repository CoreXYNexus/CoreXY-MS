include <bosl2/std.scad>
//////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////
$fn=100;
PCBThickness=1.5;
Width=6;
Length=34;
Offset=1; // amount above pcb to solder
Heigth=13-Offset;
Clearance=0.2;
PinDiamter=0.7+Clearance;
PinOffset=2.54;
//////////////////////////////////////////////////////////////////////////////////////////////////////////////////////

Spacer();

//////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////

module Spacer() {
	difference() {
		color("cyan") cuboid([Length,Width,Heigth-PCBThickness],rounding=1);
		translate([0,-Width/4,0]) {
			translate([-Length/2+1.6,0,0]) PinHole(13);
			translate([-Length/2+1.6,PinOffset,0]) PinHole(13);
		}
	}
}

//////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////

module PinHole(Qty=1) {
	for(x=[0:Qty-1]) {
		translate([x*2.54,0,0]) color("red") cyl(h=Heigth*2,d=PinDiamter);
	}
}

