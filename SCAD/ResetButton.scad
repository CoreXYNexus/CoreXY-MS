include <inc/screwsizes.scad>
use <bosl2/std.scad>
$fn=100;
///////////////////////////////////////////////////////////////////////////////////////////////////
ButtonD=19.5;
Thickness=5;
//////////////////////////////////////////////////////////////////////////////////////////////////////

Reset();

//////////////////////////////////////////////////////////////////////////////////////////////////////

module Reset() {
	difference() {
		union() {
			color("cyan") cyl(h=Thickness,d=ButtonD*1.5,rounding=2);
			translate([0,-20,0]) color("green")  cuboid([ButtonD+7,30,Thickness],rounding=2);
		}
		translate([0,0,-3]) color("red") cylinder(h=Thickness+6,d=ButtonD);
		translate([0,-27,0]) {
			translate([-6,0,0]) color("blue") cyl(h=Thickness+6,d=screw5);
			translate([6,0,0]) color("plum") cyl(h=Thickness+6,d=screw5);
			translate([-6,0,4]) color("blue") cyl(h=Thickness,d=screw5hd);
			translate([6,0,4]) color("plum") cyl(h=Thickness,d=screw5hd);
		}
	}
	translate([-8.5,-20,1.5]) rotate([0,0,0])  printchar("RESET");
}

//////////////////////////////////////////////////////////////////////////////////////////////////

module printchar(String,Height=1.5,Size=4,Font="Liberation Sans",Color="coral") { // print something
	color(Color) linear_extrude(height = Height) text(String, font = Font,size=Size);
}
