include <inc/screwsizes.scad>
include <bosl2/std.scad>
//////////////////////////////////////////////////////////////////////////
$fn=100;
/////////////////////////////////////////////////////////////////////////////

top(3);

//////////////////////////////////////////////////////////////////////////

module top(Qty=1) {
	for(x=[0:Qty-1]) {
		translate([0,x*12,0]) {
			difference() {
				color("cyan") cyl(h=8,d=screw8+2,rounding=1);
				translate([0,0,2]) color("red") cyl(h=8,d=screw8);
			}
			translate([0,0,-3]) color("blue") hull() {
				cyl(h=2,d=screw8+2);
				translate([10,0,0]) cyl(h=2,d=screw2);
			}
		}
	}
}

