include <inc/screwsizes.scad>
//////////////////////////////////////////////////////////////////////////
$fn=100;
/////////////////////////////////////////////////////////////////////////////

top(3);

//////////////////////////////////////////////////////////////////////////

module top(Qty=1) {
	for(x=[0:Qty-1]) {
		translate([0,x*12,0]) {
			difference() {
				color("cyan") cylinder(h=8,d=screw8+2);
				translate([0,0,2]) color("red") cylinder(h=8,d=screw8);
			}
			color("black") hull() {
				cylinder(h=2,d=screw8+2);
				translate([10,0,0]) cylinder(h=2,d=screw2);
			}
		}
	}
}

